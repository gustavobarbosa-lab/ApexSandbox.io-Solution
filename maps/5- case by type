public Map<String, List<Case>> casesByType(List<Case> cases) {
    Map<String, List<Case>> resultado = new Map<String,List<Case>>();
    
    if(cases == null) {
        return resultado;
    }

    for(case caseItem : cases) {
        if(caseItem != null && caseItem.Type != null) {
            if(resultado.containsKey(caseItem.Type)) {
                List<Case> valorAtual = resultado.get(caseItem.Type);
                valorAtual.add(caseItem); 
            }
            else {
                List<Case> novaLista = new List<Case>();
                novaLista.add(caseItem);
                resultado.put(caseItem.Type, novaLista);
            }
        }
    }
    return resultado;
}
