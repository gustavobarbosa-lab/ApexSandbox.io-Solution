public boolean isSorted(List<Integer> numbers) {
    public Boolean isSorted(List<Integer> numbers) {

    if(numbers.size() <= 1) {
        return true;
    }

    Integer i = 1;

    // Pula números iguais no começo
    while(i < numbers.size() && numbers[i] == numbers[i - 1]) {
        i++;
    }

    // Se todos forem iguais
    if(i == numbers.size()) {
        return true;
    }

    Boolean descending = numbers[i - 1] > numbers[i];

    for(; i < numbers.size(); i++) {

        if(descending && numbers[i - 1] < numbers[i]) {
            return false;
        }

        if(!descending && numbers[i - 1] > numbers[i]) {
            return false;
        }
    }

    return true;
}
    
    
}