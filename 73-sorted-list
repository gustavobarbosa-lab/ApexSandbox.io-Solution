public boolean isSorted(List<Integer> numbers) {
    if(numbers.size() <= 1) {
        return true;
    }

    Boolean crescente = true;
    Boolean decrescente = true;

    for(Integer i = 0; i < numbers.size() - 1; i++) {

        if(numbers[i] < numbers[i + 1]) {
            decrescente = false;
        }

        if(numbers[i] > numbers[i + 1]) {
            crescente = false;
        }
    }

    return crescente || decrescente;
}
  
    
    
}