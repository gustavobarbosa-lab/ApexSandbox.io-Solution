public boolean isSorted(List<Integer> numbers) {
   if (numbers.isEmpty() || numbers.size() == 1) {
        return true;
    }
    
    // Encontrar a primeira direção não-igual
    Boolean isAscending = null;
    for (int i = 0; i < numbers.size() - 1; i++) {
        int compare = numbers.get(i).compareTo(numbers.get(i + 1));
        if (compare < 0) { // crescente
            isAscending = true;
            break;
        } else if (compare > 0) { // decrescente
            isAscending = false;
            break;
        }
        // se for igual, continua procurando
    }
    
    // Se todos elementos são iguais
    if (isAscending == null) {
        return true;
    }
    
    // Verificar se toda a lista segue a direção encontrada
    for (int i = 0; i < numbers.size() - 1; i++) {
        if (isAscending) {
            if (numbers.get(i) > numbers.get(i + 1)) {
                return false;
            }
        } else {
            if (numbers.get(i) < numbers.get(i + 1)) {
                return false;
            }
        }
    }
    
    return true;
}