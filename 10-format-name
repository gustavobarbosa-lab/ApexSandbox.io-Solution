public String formatName(String firstName, String lastName) {
    String resultado = '';
    
    if(firstName.length() > 0) {
        if(lastName.length() > 0) {
            resultado = lastName + ', ' + firstName;
        } else {
            resultado = firstName;
        }
    }
    if(lastName.length() > 0) {
        resultado = lastName;
    }

    return resultado;
}