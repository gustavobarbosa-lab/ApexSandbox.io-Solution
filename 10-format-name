public String formatName(String firstName, String lastName) {
    String resultado = '';
    
   if(firstName.length() > 0 && lastName.length() > 0 ) {
       resultado = lastName + ', ' + firstName;
   }
   else if(firstName.length() > 0 && firstName != null) {
       resultado = firstName;
   }
   else if(lastName.length() > 0 && lastName != null  && firstName != null) {
       resultado = lastName;
   }else if(firstName == null && lastName.length() > 0 && lastName != null) {
       resultado = lastName;
   }

    return resultado;
}