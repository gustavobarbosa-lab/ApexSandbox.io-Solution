public String reverseWordsInASentence(String sentence){
    String palavraInvertida;

    if(sentence == null) {
        palavraInvertida = null;
    } else {
        palavraInvertida = '';
    }

    if(!String.isBlank(sentence)) {
        List<String> palavraDividida = sentence.split(' ');
    
        for(Integer i = palavraDividida.size() - 1; i >= 0; i--) {
            palavraInvertida += palavraDividida[i];

            if(i > 0) {
                palavraInvertida += ' ';
            }
        }
    }
           
    return palavraInvertida;
}
