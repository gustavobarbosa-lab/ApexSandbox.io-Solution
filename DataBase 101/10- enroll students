public void enrollStudents(List<String> emails, String className) {
   List<apxio__Class__c> classes = [
       SELECT Name, Id
       FROM apxio__Class__c
       WHERE Name = :className
   ];

   List<apxio__Student__c> estudantes = [
       SELECT Name, Id, apxio__Student__c.apxio__Email__c
       FROM apxio__Student__c
       WHERE apxio__Email__c IN: emails
   ];

   List<apxio__Class_Enrollment__c> classesEstudantes = new List<apxio__Class_Enrollment__c>();

   for(apxio__Student__c estudante : estudantes) {
       apxio__Class_Enrollment__c classeEstudante = new apxio__Class_Enrollment__c(
           apxio__Student__c = estudante.Id,
           apxio__Offered_Class__c = classes[0].Id
       );

       classesEstudantes.add(classeEstudante);
   }

   insert classesEstudantes;
}
