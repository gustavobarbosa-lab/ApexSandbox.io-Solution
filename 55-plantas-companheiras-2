public Boolean companionPlants(List<String> plants) {
   Integer index = 1;
   String combinacao = '';
    List<String> combinacoes = new List<String>{
        'lettucecucumbers',
        'lettuceonions',
        'onionscarrots',
        'onionstomatoes',
        'tomatoesonions'        
    };

   for(Integer i = 0; i < plants.size(); i++) {
        Integer nextIndex = (i + 1) % plants.size();
        String combinacao = plants[i] + plants[nextIndex];

       combinacao = plants[i] + plants[i + index];

       if(!combinacoes.contains(combinacao)) {
           return false;
       }
   }

   return true;
}