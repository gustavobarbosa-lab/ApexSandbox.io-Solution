public Boolean companionPlants(List<String> plants) {

    Set<Set<String>> combinacoes = new Set<Set<String>>{
        new Set<String>{'lettuce','cucumbers'},
        new Set<String>{'lettuce','onions'},
        new Set<String>{'onions','carrots'},
        new Set<String>{'onions','tomatoes'}
    };

    for(Integer i = 0; i < plants.size(); i++) {
        
        Integer nextIndex = (i + 1) % plants.size();
        
        Set<String> par = new Set<String>{
            plants[i],
            plants[nextIndex]
        };

        if(!combinacoes.contains(par)) {
            return false;
        }
    }

    return true;
}