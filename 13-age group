public String ageGroup(Integer n) {
    String resultado = '';
    if(n >= 0 && n <= 1) {
        resultado = 'Infant'; 
    }
    else if(n >= 2 && n <= 14) {
        resultado = 'Child';
    }
    else if(n >= 15 && n <= 21) {
        resultado = 'Youth';
    }
    else if(n >= 22) {
        resultado = 'Adult';
    }

    return resultado;
}
