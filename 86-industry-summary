public Map<String, Decimal> industrySummary(List<Account> accounts) {
    Map<String, Decimal> resultado = new Map<String, Decimal>();

    if(accounts == null) {
        return resultado;    
    }

    for(Account conta : accounts) {
        if(conta.Industry != null ) {
           Decimal revenue = (conta.AnnualRevenue == null ? 0 : conta.AnnualRevenue); 

           Decimal atual = resultado.get(conta.Industry);

           atual = (atual == null ? 0 : atual);

           resultado.put(conta.Industry, atual + revenue);
        }
    }

    return resultado;
}