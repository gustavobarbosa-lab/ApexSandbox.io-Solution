public Boolean companionPlants(List<String> plants) {
    Set<String> combinacoes = new Set<String>{
        'lettucecucumbers',
        'lettuceonions',
        'onionscarrots',
        'onionstomatoes',
        'tomatoesonions'        
    };

    if(plants.size() == 1) {
        return false;
    }

    for(Integer i = 0; i < plants.size() - 1; i++) {
        String combinacao = plants[i] + plants[i + 1];

        if(!combinacoes.contains(combinacao)) {
            return false;
        }
    }

    return true;
}
